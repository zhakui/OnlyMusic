<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/playback"
            android:text="@string/Title"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/more" />
        <ImageButton
            android:id="@+id/playback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-4dp"
            android:background="@drawable/playback" />
    </RelativeLayout>

   	<RelativeLayout 
        android:id="@+id/content"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/top_bar"
        android:layout_above="@+id/playbar">
   	    <ImageView
   	        android:id="@+id/drawable_head"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_alignParentTop="true"
   	        android:layout_centerHorizontal="true"
   	        android:layout_marginTop="10dp"
   	        android:background="@drawable/lry_background"
   	        android:padding="25.0dip"
   	        android:src="@drawable/playhead"/>
   	    <TextView
   	        android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/drawable_head"
            android:text="@string/Title"
            android:textSize="25sp"
            android:textStyle="bold" 
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"/>
   	    <TextView
   	        android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/music_name"
            android:text="@string/Title"
            android:textSize="18sp"
            android:textColor="#3f3f48" 
            android:layout_marginTop="5dp"/>
   	</RelativeLayout>
   	
	<RelativeLayout
	    android:id="@+id/timebar"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playbar">
        <TextView
   	        android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:paddingLeft="20.0dip"   
            android:text="@string/start_time"
            android:layout_marginRight="10.0dip" 
            android:textSize="15sp"
            android:textColor="#3f3f48" />
        <TextView
   	        android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:paddingRight="20.0dip"
            android:text="@string/end_time"
            android:textSize="15sp"
            android:layout_marginLeft="10.0dip" 
            android:textColor="#3f3f48" />
        <SeekBar
        	android:id="@+id/playback_seeker"
        	android:focusable="false"
        	android:clickable="true"
        	android:layout_width="210.0dip"
        	android:layout_height="wrap_content"
			android:maxHeight="10.0dip"
			android:max="100"
			android:layout_margin="0.0dip"
			android:progressDrawable="@drawable/player_setting_bright_progressbar"
			android:thumb="@drawable/player_settings_bright_thumb"
			android:minHeight="5.0dip"
			android:paddingLeft="5.0dip"
			android:paddingRight="5.0dip"
			android:thumbOffset="5.0dip"
			android:layout_toLeftOf="@+id/total_time"
			android:layout_toRightOf="@+id/current_time"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			style="@android:attr/progressBarStyleHorizontal"/>
	</RelativeLayout>
	
 	<RelativeLayout
	    android:id="@+id/playbar"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"  
        android:layout_above="@+id/volume">
        <ImageView
   	        android:id="@+id/previous"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:layout_marginLeft="100.0dip"   
   	        android:src="@drawable/previous" />
        <ImageView
            android:id="@+id/next"
        	android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:layout_marginRight="100.0dip"
   	        android:src="@drawable/next" />
		<ImageView
   	        android:id="@+id/play"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="2.0dip"
			android:layout_toRightOf="@+id/previous"
			android:layout_toLeftOf="@+id/next"
			android:src="@drawable/pause"/>
	</RelativeLayout>
	
	<RelativeLayout
	    android:id="@+id/volume"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip">
        <ImageView
   	        android:id="@+id/volume_min"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:layout_marginLeft="28.0dip"  
            android:layout_marginRight="10.0dip" 
   	        android:src="@drawable/volume_min" />
        <ImageView
   	        android:id="@+id/volume_max"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:layout_marginRight="28.0dip"
            android:layout_marginLeft="10.0dip" 
   	        android:src="@drawable/volume_max" />
        <SeekBar
        	android:id="@+id/volume_seeker"
        	android:focusable="false"
        	android:clickable="true"
        	android:layout_width="210.0dip"
        	android:layout_height="wrap_content"
			android:maxHeight="10.0dip"
			android:max="100"
			android:layout_margin="0.0dip"
			android:progressDrawable="@drawable/player_setting_bright_progressbar"
			android:thumb="@drawable/player_settings_bright_thumb"
			android:minHeight="5.0dip"
			android:thumbOffset="5.0dip"
			android:paddingLeft="5.0dip"
			android:paddingRight="5.0dip"
			android:layout_toLeftOf="@+id/volume_max"
			android:layout_toRightOf="@+id/volume_min"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			style="@android:attr/progressBarStyleHorizontal"/>
	</RelativeLayout>
</RelativeLayout>